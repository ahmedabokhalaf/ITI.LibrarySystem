@model AuthorModel

<div class="row col-md-4">
    <form method="post" asp-action="Edit" asp-controller="Book" asp-route-id="@Model.Id" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Id" class="control-label">Author Id</label>
            <input asp-for="Id" class="form-control" value="@Model.Id" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Author Name</label>
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-info" />
            <a asp-action="Index" asp-controller="Author" class="btn btn-outline-info">Back to List</a>
        </div>
    </form>
</div>

@section LeftPanel{
    <h1 style="color: greenyellow">Author Modification</h1>
}