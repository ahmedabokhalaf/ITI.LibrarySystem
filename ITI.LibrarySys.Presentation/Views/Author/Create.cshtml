@model AuthorModel
<div class="alert alert-success" role="alert" style="display:none" id="alert">
    <h4 class="alert-heading">Well done!</h4>
    <p>Aww yeah, you successfully created new author.</p>
    <hr>
    <p class="mb-0">
        <a asp-action="Index" asp-controller="Author">Click Here</a>
        for Details
    </p>
</div>
<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="Author" asp-action="Create" enctype="multipart/form-data"
              data-ajax="true" data-ajax-complete="AuthorCreated" data-ajax-loading="#loader">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
                <a asp-controller="Author" asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-4" style="text-align:center; padding:100px">
        <img src="~/Content/Images/createLoader.gif" id="loader" style="width:200px;height:200px;display:none" />
    </div>
</div>
<script>
    function AuthorCreated(data) {
        document.getElementById("alert").style.display = "block";
    }
</script>
@section LeftPanel{
    <h1 style="color: greenyellow">New Book Creation</h1>
}
