@model Author
<h3>Are you sure you want to delete this?</h3>
<div class="row col-md-4">
    <form method="post" asp-action="Delete" asp-controller="Author">
        <div class="form-group">
            <label asp-for="ID" class="control-label">Author Id</label>
            <input asp-for="ID" class="form-control" readonly value="@Model.ID" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Author Name</label>
            <input asp-for="Name" name="authorName" class="form-control" readonly value="@Model.Name" />
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Author" class="btn btn-outline-info">Cancel</a>
    </form>
</div>

@section LeftPanel{
    <h1 style="color: greenyellow">Author Delation</h1>
}